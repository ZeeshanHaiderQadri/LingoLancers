# LingoLancers Production Environment Configuration

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Google Gemini API (for AI Image features)
GEMINI_API_KEY=your_gemini_api_key_here

# SERP API (for travel and research features)
SERP_API_KEY=your_serp_api_key_here

# Deepgram API (alternative voice service)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Database Configuration (automatically set by Docker)
DATABASE_URL=postgresql://lingo_user:lingo_secure_password_2024@database:5432/lingo_production

# Frontend Configuration
NEXT_PUBLIC_LINGO_API_URL=http://localhost:8000

# Security
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Production Settings
NODE_ENV=production
ENVIRONMENT=production